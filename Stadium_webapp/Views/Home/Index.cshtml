@{
    ViewData["Title"] = "Home Page";
}


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="margin-top:20px;">
	
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<div class="item active">
			<img src="~/images/StamfordBridge.jpg" alt="1" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p style="font-weight:700;">
					Visit Stamford Bridge. Home of Chelsea Football Club.
					<br />
					<a style="color:white; font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; font-size:40px;" class="btn" href="https://www.chelseafc.com/en">
						More...
					</a>

				</p>
			</div>
		</div>
		<div class="item">
			<img src="~/images/EtihadStadium.jpg" alt="2" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p style="font-weight:700;">
					Visit Etihad. Home of Manchester City Football Club.
			<br />
					<a style="color:white; font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; font-size:40px;" class="btn" href="https://www.mancity.com/?utm_source=premier-league-website&utm_campaign=website&utm_medium=link">
						More...
					</a>
				</p>
			</div>
		</div>
		<div class="item">
			<img src="~/images/AnfieldStadium.jpg" alt="3" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p style="font-weight:700";>
					Visit Anfield. Home of Liverpool Football Club.
					<br />
					<a style="color:white; font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; font-size:40px;" class ="btn" href="https://www.liverpoolfc.com/?utm_source=premier-league-website&utm_campaign=website&utm_medium=link">
						More...
					</a>
				</p>
			</div>
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<div class="stadium">
	<p class="stadiumtext">
		Take a look at world most popular football stadiums.
	</p>
	
	<div style="background-image: linear-gradient(to right, #ff00ff, #ffb95a);">
		<video src="~/images/StadiumVideo.mp4" width="100%" height="100%;" style="padding:10px 10px;" controls></video>
	</div>
</div>
<div style="padding-left:-70px; margin-top:60px;">
	<img src="~/images/Sponzori.jpg" width="100%;"/>
</div>

