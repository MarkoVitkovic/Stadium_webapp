@{
    ViewData["Title"] = "Home Page";
}


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
	
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<div class="item active">
			<img src="~/images/StamfordBridge.jpg" alt="ASP.NET" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					Visit Stamford Bridge. Home of Chelsea Football Club.
					<a class="btn btn-default" href="https://www.chelseafc.com/en">
						Visit
					</a>
				</p>
			</div>
		</div>
		<div class="item">
			<img src="~/images/EtihadStadium.jpg" alt="Visual Studio" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					Visit Etihad. Home of Manchester City Football Club.
					<a class="btn btn-default" href="https://www.mancity.com/?utm_source=premier-league-website&utm_campaign=website&utm_medium=link">
						Visit
					</a>
				</p>
			</div>
		</div>
		<div class="item">
			<img src="~/images/AnfieldStadium.jpg" alt="Microsoft Azure" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					Visit Anfield. Home of Liverpool Football Club.
					<a class="btn btn-default" href="https://www.liverpoolfc.com/?utm_source=premier-league-website&utm_campaign=website&utm_medium=link">
						Visit
					</a>
				</p>
			</div>
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<div>
	<p>
		Take a look at world most popular football stadiums.
	</p>
	<video src="~/images/StadiumVideo.mp4" width="1024" height="650" controls></video>
</div>

